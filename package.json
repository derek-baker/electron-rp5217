{
  "name": "sdg-rp5217",
  "version": "1.2.18",
  "license": "MIT",
  "description": "app to generate pdfs with 417 barcode",
  "author": "Systems Development Group <dbaker@sdgnys.com>",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint-es": "npx eslint javascripts/*",
    "start-dev": "SET \"NODE_ENV=dev\" && electron .",
    "start-test": "echo \"RUNNING APP AGAINST STAGING ENV\" && SET \"NODE_ENV=test\" && electron . \"..\\data.sdg\"",
    "compile": "webpack",
    "test": "mocha --no-diff --bail",
    "pack": "electron-builder --dir",
    "build": "echo \"THIS SCRIPT DOES NOT SIGN THE APP!\" && electron-builder",
    "publish-pre-reqs": "build -p always",
    "release-gcp-storage": "pwsh UploadRelease.ps1",
    "publish": "pwsh DoNotCommit.ps1"
  },
  "build": {
    "appId": "com.electron.rp5217",
    "artifactName": "RP5217_Setup.exe",
    "directories": {
      "output": "electron_dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron_build_resources/icon.ico"
    },
    "nsis": {
      "allowElevation": true,
      "installerIcon": "electron_build_resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SDG RP5217 Editor",
      "runAfterFinish": false
    },
    "fileAssociations": {
      "ext": "sdg",
      "name": "SDGFILE"
    }
  },
  "dependencies": {
    "electron-log": "^3.0.5",
    "electron-updater": "^4.0.7"
  },
  "devDependencies": {
    "electron": "^4.0.4",
    "@google-cloud/storage": "^2.4.3",
    "css-loader": "^1.0.1",
    "electron-builder": "^20.38.5",
    "electron-builder-squirrel-windows": "^20.38.5",
    "eslint": "^5.14.1",
    "eslint-config-google": "^0.12.0",
    "eslint-plugin-vue": "^5.2.2",
    "mocha": "^5.2.0",
    "pdf2json": "^1.1.8",
    "spectron": "^5.0.0",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.1",
    "vue": "^2.5.22",
    "vue-loader": "^15.6.2",
    "vue-template-compiler": "^2.5.22",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  }
}
